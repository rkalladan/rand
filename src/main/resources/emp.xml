<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.rand.sprhib.model.Employee" table="Employee">
		<id name="id" column="Id" type="java.lang.Integer">
			<generator class="increment"/>
		</id>
		<property name="name">
			<column name="Name"/>
		</property>
		<property name="age">
			<column name="Age"/>
		</property>
		<property name="salary">
			<column name="Salary"/>
		</property>
	</class>
</hibernate-mapping>